<hr />
<div class="card">
    <div class="card-header">
        Create a post:
    </div>
    <div class="card-body">
        <form id="newPostForm">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label>Title</label>
                    <input type="text" class="form-control" id="postTitle" />
                </div>
                <div class="form-group col-md-6">
                    <label>Content</label>
                    <input type="text" class="form-control" id="postContent" />
                </div>
            </div>
            <button class="btn save-btn" type="submit">Save</button>
        </form>
    </div>
</div>
<hr />
        {{#if posts.length}}
        <div class="card-deck postCard">
            {{#each posts as |post|}}
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title postTitle">{{post.title}}</h3>
                    <p class="card-text">{{post.body}}</p>
                    <a href="/posts/{{post.id}}">View {{post.title}}</a>
                </div>
            </div>
            {{/each}}
            {{/if}}
        </div>

        <script src='./js/new-post-logic.js'></script>